interface Props {
  title: string;
}

const { title } = Astro.props;

console.log(import.meta.env.BASE_URL);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href={`${import.meta.env.BASE_URL}/css/bootstrap.css`}
    />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}/css/all.css`} />
    <link
      rel="stylesheet"
      href={`${import.meta.env.BASE_URL}/css/styles.css`}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
