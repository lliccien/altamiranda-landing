<script>
  const navbar = document.querySelector("nav.navbar");
  console.log(navbar);
  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      navbar?.classList.add("top-nav-collapse");
    } else {
      navbar?.classList.remove("top-nav-collapse");
    }
  });
</script>
