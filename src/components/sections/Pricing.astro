---
import { feature } from "../../data/data.json";
---

<section>
  <div id="features" class="cards-2">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h2 class="h2-heading">{feature.title}</h2>
        </div>
        <!-- end of col -->
      </div>
      <!-- end of row -->
      <div class="row">
        <div class="col-lg-12">
          {
            feature.features.map(
              ({ title, price, frequency, items, action }) => {
                return (
                  <div class="card">
                    <div class="card-body">
                      <div class="card-title">{title}</div>
                      <div class="price">
                        <>
                          <span class="currency">$</span>
                          <span class="value">{price}</span>
                        </>
                      </div>
                      <div class="frequency">{frequency}</div>
                      <div class="divider" />
                      <ul class="list-unstyled li-space-lg">
                        {items?.map(({ icon, content }) => {
                          return (
                            <li class="media">
                              <>
                                <i class={`fas fa-${icon}`} />
                                <div class="media-body">{content}</div>
                              </>
                            </li>
                          );
                        })}
                      </ul>
                      <div class="button-wrapper">
                        <a
                          class="btn-solid-reg page-scroll"
                          href="sign-up.html"
                        >
                          {action}
                        </a>
                      </div>
                    </div>
                  </div>
                );
              }
            )
          }
        </div>
        <!-- end of col -->
      </div>
      <!-- end of row -->
    </div>
    <!-- end of container -->
  </div>
  <!-- end of cards-2 -->s
</section>
